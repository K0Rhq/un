---
import type { CollectionEntry } from "astro:content";

interface Props {
  componentProps?: CollectionEntry<"previews">["data"]["props"];
}

const { componentProps } = Astro.props;
---

{
  componentProps && (
    <div class="bg-neutral-900 flex flex-col gap-4 rounded-md p-4 col-span-1 h-full">
      <h3 class="text-2xl">Inspector</h3>
      {Object.entries(componentProps).map(([key, value]) => (
        <div class="w-full flex justify-between items-center">
          <p class="text-neutral-400 font-mono">{key}</p>

          <p class="text-white text-lg">{String(value.value)}</p>
        </div>
      ))}
    </div>
  )
}
