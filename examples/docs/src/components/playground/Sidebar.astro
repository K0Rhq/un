---
import { getCollection } from "astro:content";
import SidebarTree from "./SidebarTree.astro";

const previews = await getCollection("docs");
---

<div
  class="p-4 rounded-md bg-neutral-900 flex flex-col gap-3 col-span-1 h-full"
>
  <a
    href="/"
    class="text-3xl bg-gradient-to-r from-orange-400 to-red-600 inline-block text-transparent bg-clip-text hover:font-bold transition-all duration-150 ease-out"
    >unDocs</a
  >
  <hr class="border-neutral-700" />
  <SidebarTree items={previews} />
  <div class="flex-grow"></div>
  <a href="https://github.com/K0Rhq/un" class="text-xs text-neutral-500"
    >unDocs v0.1.0-alpha</a
  >
</div>
