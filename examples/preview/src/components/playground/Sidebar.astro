---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

const previews = await getCollection("previews");
type previewType = CollectionEntry<"previews">;
---

<div
  class="p-4 rounded-md bg-neutral-900 flex flex-col gap-3 col-span-1 h-full"
>
  <a href="/">back</a>
  {
    previews.map((preview: previewType) => (
      <a
        href={`/playground/${preview.id}`}
        class={`text-lg ${Astro.url.pathname === `/playground/${preview.id}` && "text-blue-400"}`}
      >
        {preview.data.title}
      </a>
    ))
  }
</div>
